<%= form_tag login_path do %>

  <div class="field">
    <%= email_field_tag :email, nil, placeholder:"Email Address" %>
  </div>

  <div class="field">
  <%= password_field_tag :password, nil, placeholder:"Pandaword" %>
  </div>


  <div class="actions">
    <%= submit_tag("Login") %>
  </div>
<% end %>

  <div class="message">
    New to us? <%= link_to "Signup", new_user_path %>
  </div>
