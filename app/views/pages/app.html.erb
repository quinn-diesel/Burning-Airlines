  <h1>Inferno Airlines</h1>

  <div id="SearchView">
  </div>

  <table id="flights">
    <tr>
      <th>Flight Number</th>
      <th>Date</th>
      <th>From</th>
      <th>To</th>
    </tr>
  </table>

  <table id="searchFlights" style="display: none">
    <tr>
      <th>Flight Number</th>
