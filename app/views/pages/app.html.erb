<!-- ADMIN CREATE AIRPLANE  -->
<script type="html/template" id ="AirplaneViewTemplate">
  <div id="AirplaneView">
    <h1>Make a new plane here and enter details</h1>
    <p>Name</p>
    <p>Rows</p>
    <p>Cols</p>
  </div>
</script>

<!-- TABLE FOR THE FLIGHT DETAILS  -->
<script type="html/template" id="FlightViewTemplate">
  <td>{{ id }}</td>
  <td>{{ date }}</td>
  <td>{{ from }}</td>
  <td>{{ to }}</td>
</script>

<!-- RESERVATION DETAILS -->
<script type="html/template" id="ReservationViewTemplate">
  <div id="FlightView">
    <h1>Enter in the reservation details</h1>
      <p>Flight Number</p>
      <p>Seats free</p>
      <p>Select seat number</p>
  </div>
</script>

<!-- SEARCH TEMPLATE -->
<script type="html/template" id ="SearchViewTemplate">

  <div class="SearchForm">
    From:
    <input id="from" type="text"/>
    To:
    <input id="to" type="text"/>
    <button>Search</button>
  </div>

</script>


<!-- FLIGHT DETAILS TEMPLACE  -->
<script type="html/template" id="FlightDetailViewTemplate">

  <h1>Flight number: {{ id }}</h1>
  <h2>{{ date }}</h2>
  <h2>{{ from }}</h2>
  <h2>{{ to }}</h2>

  <h3>Capacity: </h3>
  <h3>Seats left</h3>

</script>
